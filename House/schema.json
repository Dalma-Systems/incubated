{
  "$schema": "http://json-schema.org/schema#",
  "$schemaVersion": "0.0",
  "$id": "https://smart-data-models.github.io/incubated/House/schema.json",
  "title": "Draft house",
  "description": "This entity contains a drfted model for a house.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["House"],
          "description": "NGSI Entity Type"
        },
        "landLocation": {
          "$ref": "http://geojson.org/schema/Geometry.json#",
          "description": "Geometry defining the boundaries of the house if in a parcel"
        },
        "contactPoint": {
          "type": "object",
          "description": "Contact information of the farm i.e email, telephone, etc"
        },
        "ownedBy": {
          "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType",
          "description": "Owner (Person or Organization) of the house"
        }
      }
    }
  ],
  "required": ["id", "type"]
}
